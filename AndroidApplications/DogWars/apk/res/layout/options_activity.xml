          xmlns:android="http://schemas.android.com/apk/res/android">
            <ToggleButton android:id="@id/toggle_sound" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" />
            <TextView android:layout_gravity="left" android:padding="10.0dip" android:visibility="visible" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sound" style="@style/titleTextLight" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:padding="10.0dip" android:layout_width="wrap_content" android:layout_height="wrap_content"
          xmlns:android="http://schemas.android.com/apk/res/android">
